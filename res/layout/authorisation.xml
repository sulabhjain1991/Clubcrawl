<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Enjoy your night!"
        android:textColor="#6A6C6B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAuthoriseOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/authorise_textview_shape"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="Authorise with bar staff!"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:textSize="20sp" />

    <com.linchpin.clubcrawl.helper.ImageViewRounded
        android:id="@+id/ivVenuePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        style="@style/CircularImage"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/no_img_jst_yet"
        />

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/twitter"
        android:paddingLeft="25dp"
        android:text="Tweet"
        android:textColor="@android:color/white" />

</LinearLayout>