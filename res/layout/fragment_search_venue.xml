<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sub_bar_height"
        android:orientation="horizontal"
         android:id="@+id/frame"
        android:weightSum="4" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           
            android:orientation="vertical" >

            <View
                android:id="@+id/vBars"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_color" />

            <TextView
                android:id="@+id/tvBars"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:background="#ffffffff"
                android:gravity="center"
                android:padding="5dp"
                android:text="gfsddf "
                android:textStyle="bold" >
            </TextView>
        </FrameLayout>
        
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/vNightClubs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_color" />

            <TextView
                android:id="@+id/tvNightClubs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/vEvents"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_color" />

            <TextView
                android:id="@+id/tvEvents"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/vPubs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_color" />

            <TextView
                android:id="@+id/tvPubs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlbottom"
        android:layout_below="@+id/actionBarMenu"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/details"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".95" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/background_grey_Color" />

        <ListView
            android:id="@+id/titles"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight=".05" />
    </LinearLayout>

</LinearLayout>