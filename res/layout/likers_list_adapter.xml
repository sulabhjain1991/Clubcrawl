<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <com.linchpin.clubcrawl.helper.ImageViewRounded
        android:id="@+id/ivLikersImage"
        style="@style/CircularImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/no_img_jst_yet" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivLikersImage"
        android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"
         >

        <TextView
            android:id="@+id/tvLikersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="Ankit Awasthi"
            android:textColor="@color/background_color"
            android:textSize="16sp" />

       

        <TextView
            android:id="@+id/tvfollow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="+ Follow"
            android:textColor="@color/background_color" />
        
         <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tvLikersName"
            android:layout_marginTop="20dp"
            android:background="#f2f2f2" />
    </RelativeLayout>

</RelativeLayout>